<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_sead_invoice_payments_widget" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.sead</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Inserta al final del notebook, sin depender de un ID que pueda haber cambiado -->
            <xpath expr="//notebook" position="inside">
                <page name="payments_widget" string="Payments Widget">
                    <field name="invoice_payments_widget_ids">
                        <tree>
                            <field name="journal_name"/>
                            <field name="amount"/>
                            <field name="date"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
